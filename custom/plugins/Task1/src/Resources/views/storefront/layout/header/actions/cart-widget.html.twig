{% sw_extends '@Storefront/storefront/layout/header/actions/cart-widget.html.twig' %}

{% block layout_header_actions_cart_widget %}
    <span class="header-cart-title d-none d-xl-inline-block">{{ 'checkout.cartTitle'|trans|striptags }}</span>
    <span class="header-cart-icon d-xl-none">
        {% sw_icon 'bag' %}
    </span>
    <span class="header-cart-total">
        <span class="d-none d-xl-inline">&nbsp;(</span>{{ page.cart.price.positionPrice|currency }}<span class="d-none d-xl-inline">)</span>
    </span>
{% endblock %}
